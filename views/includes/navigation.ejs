<div class="backdrop"></div>
<header class="main-header">
  <nav class="main-header__nav">
    <div style="display: flex; align-items: center;">
      <a href="/" style="text-decoration: none; color: white;">
        <h1 style="color: white; margin: 0; font-size: 1.5rem; cursor: pointer;">ShopHub</h1>
      </a>
    </div>
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/products' ? 'active' : '' %>"
           href="/products">Products</a>
      </li>
      <% if(!isAuthenticated) { %>
        <li class="main-header__item">
          <a class="<%= path === '/about' ? 'active' : '' %>" href="/about">About</a>
        </li>
      <% } %>
      <% if(isAuthenticated) { %>
        <li class="main-header__item">
          <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">ðŸ›’ Cart</a>
        </li>
